{
	"name": "open-source-stack",
	"version": "1.1.2",
	"description": "Minimal open-source stack to help you ship an open-source package in TS",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"import": "./dist/index.cjs",
				"require": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "tsdown src/index.ts",
		"prepublishOnly": "pnpm run build && pnpm run test:exports",
		"test:unit": "vitest run --passWithNoTests",
		"test:cov": "vitest run --coverage",
		"test:types": "tsc",
		"test:publint": "publint --strict",
		"test:exports": "attw --pack ."
	},
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forge-42/open-source-stack.git"
	},
	"bugs": {
		"url": "https://github.com/forge-42/open-source-stack/issues"
	},
	"files": ["dist"],
	"homepage": "https://github.com/forge-42/open-source-stack#readme",
	"publishConfig": {
		"provenance": true
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.4",
		"@changesets/cli": "^2.29.0",
		"@types/node": "22.14.1",
		"@vitest/coverage-v8": "^3.1.1",
		"happy-dom": "^17.4.4",
		"tsdown": "^0.15.6",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	}
}
